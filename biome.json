{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": ["dist/", ".localPack/", "package.json"]
  },
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "indentStyle": "space",
    "lineWidth": 110,
    "lineEnding": "lf"
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "warn"
      }
    },
    "ignore": ["dist/", ".localPack", "package.json"]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "enabled": true,
      "attributePosition": "auto",
      "semicolons": "asNeeded",
      "indentWidth": 2,
      "indentStyle": "space"
    }
  }
}
